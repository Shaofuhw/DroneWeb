<% include ../partials/header %>

    <div class="container" id="worklist">
        <div class="row">
            <div class="col-xs-6">
                <h2>Trabajos</h2>
            </div>
            <div class="col-xs-6">
                <% if(error && error.length > 0){ %>
                    <div class="alert alert-danger" role="alert" style="width:100%; margin-top: 12px">
                        <%= error %>
                    </div>
                <% } else if(success && success.length > 0){ %>
                    <div class="alert alert-success" role="alert" style="width:100%; margin-top: 12px">
                        <%= success %>
                    </div>
                <% } %>
            </div>
        </div>
        
        <div class="row">
            
        </div>
        <hr>
        <div class="row" >
            <div class="col-xs-12 col-sm-3">
                <div class="list-group">
                    <button id="all-button" class="list-group-item">Todos</button>
                    <button id="on-button" class="list-group-item">En Curso</button>
                    <button id="done-button" class="list-group-item">Completado</button>
                    <button id="off-button" class="list-group-item">Abandonado</button>
                </div>
                <div class="list-group">
                    <a class="btn btn-lg btn-success" style="width: 100%; margin-bottom: 30px" href="/works/new">Nuevo Trabajo</a>
                </div>
            </div>
            <div class="col-xs-12 col-sm-9">
                <% works.forEach(function(work){ %>
                    <% if(work.status === "En Curso") { %>
                        <div class="btn btn-grey on work-box" id="work-box">
                    <% } else if (work.status === "Completado") { %> 
                        <div class="btn btn-grey done work-box" id="work-box">
                    <% } else if (work.status === "Abandonado") {%>
                        <div class="btn btn-grey off work-box" id="work-box">
                    <% } %>
                        <div class="col-xs-3" id="work-box-image">
                            <img class="thumbnail" src="<%= work.thumbnail %>">
                            <div id="thumbnail-text">
                                <div class="col-xs-8" style="padding: 0px">
                                    <a class="btn 
                                        <% if (work.status === "En Curso"){ %>
                                            btn-warning
                                        <% } else if(work.status === "Completado"){ %>
                                            btn-success
                                        <% } else if(work.status === "Abandonado"){ %> 
                                            btn-danger
                                        <% } %>
                                    "></a>
                                    <%=work.status%>
                                    <a href="/works/<%=work.id%>" id="show-work" style="display:none"></a>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-9">
                            <h4><%=work.name%></h4>
                            <hr>
                            <h5><%-work.description.substring(0, 400)%> . . .</h5>
                        </div>
                    </div>
                    <br><br>
                    
                <% }) %>
            </div>
        </div>
    </div>
    
    <script src="javascript/works-index.js"></script>
<% include ../partials/footer %>